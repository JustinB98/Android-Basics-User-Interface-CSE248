<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/add_manual_card_btn"
            style="@style/menu_item"
            android:text="@string/add_manual_card" />

        <TextView
            android:id="@+id/add_auto_card_btn"
            style="@style/menu_item"
            android:text="@string/add_auto_card" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/edit_card_btn"
            style="@style/menu_item"
            android:text="@string/edit_a_card" />

        <TextView
            android:id="@+id/card_history_btn"
            style="@style/menu_item"
            android:text="@string/check_card_history" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/add_manual_transaction_btn"
            style="@style/menu_item"
            android:text="@string/add_manual_transaction"/>

        <TextView
            android:id="@+id/delete_card_btn"
            style="@style/menu_item"
            android:text="@string/delete_card_option"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/monthly_calculations_view"
            style="@style/menu_item"
            android:text="Calculate Monthly Payment" />

    </LinearLayout>

</LinearLayout>